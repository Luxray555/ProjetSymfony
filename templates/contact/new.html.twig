{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block javascripts %}
<script src="https://cdn.tailwindcss.com"></script>
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
{% endblock %}


{% block body %}
<h1 class="text-3xl p-3 font-bold">Contact</h1>
<div class="flex gap-2 items-center justify-center w-full">
    {{ form_start(form, {'attr' : {'class': 'flex flex-col gap-2 w-2/3'}}) }}
    <div>
        {{ form_widget(form.mail, {'attr' : {'class': 'p-2.5 border-2 rounded-lg', 'placeholder': 'Adresse email...'}}) }}
        {{ form_widget(form.nom, {'attr' : {'class': 'p-2.5 border-2 rounded-lg', 'placeholder': 'Nom...'}}) }}
    </div>
        {{ form_widget(form.objet, {'attr' : {'class': 'p-2.5 border-2 rounded-lg', 'placeholder': 'Objet...'}}) }}
        {{ form_widget(form.message, {'attr' : {'class': 'resize-none p-2.5 w-full text-sm rounded-lg border-2', 'placeholder': 'Message...', 'rows': 5}}) }}

        <div class="flex items-center justify-center">
            <button class="w-20 hover:border-blue-700 hover:border-1 text-blue-700 font-semibold py-2 px-2 border-1 rounded ease-in-out duration-300">{{ button_label|default('Envoyer') }}</button>
        </div>

    {% if toast == true %}
        <div class="flex align-center justify-center pt-2">
            <div class="drop-shadow-lg flex bg-green-300 align-items justify-center py-1.5 px-3 gap-2 text-white rounded-full">
                <span class="text-2xl"><i class="fas fa-check-circle"></i></span>
                <p class="text-xl">Votre message a été transmis avec succés!</p>
            </div>
        </div>
    {% endif %}

    {{ form_end(form) }}
</div>
{% endblock %}
