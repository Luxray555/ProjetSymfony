    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ anime.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ anime.nom }}</td>
            </tr>
            <tr>
